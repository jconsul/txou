                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:text="V"/>
                <Button
                    android:id="@+id/botonW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:text="W"/>
                <Button
                    android:id="@+id/botonX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:text="X"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/letrasFila5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/botonY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:text="Y"/>
                <Button
                    android:id="@+id/botonZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:text="Z"/>
                <Button
                    android:id="@+id/botonIRTEN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".60"
                    android:text="Irten"
                    android:onClick="salir"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>










</RelativeLayout>
