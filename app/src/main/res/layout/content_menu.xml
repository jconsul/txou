<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_menu" tools:context="es.tta.txou.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloPagina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="@color/letraTitulos"/>


        <LinearLayout
            android:id="@+id/botonesMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/botonesMenu1"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_weight=".25"/>
            <ImageButton
                android:id="@+id/botonesMenu2"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_weight=".25"/>
            <ImageButton
                android:id="@+id/botonesMenu3"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_weight=".25"/>
            <ImageButton
                android:id="@+id/botonesMenu4"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_weight=".25"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/egoeraGosea"
                android:layout_width="wrap_content"
                android:layout_height="150px"
                android:layout_weight=".30"
                android:visibility="invisible"
                android:src="@drawable/bokadillo_gosea"/>
            <ImageView
                android:id="@+id/egoeraMina"
                android:layout_width="wrap_content"
                android:layout_height="150px"
                android:layout_weight=".30"
                android:visibility="invisible"
                android:src="@drawable/bokadillo_mina"/>
            <ImageView
                android:id="@+id/egoeraAspertu"
                android:layout_width="wrap_content"
                android:layout_height="150px"
                android:layout_weight=".30"
                android:visibility="invisible"
                android:src="@drawable/bokadillo_aspertu"/>
            </LinearLayout>


        <ImageView
            android:id="@+id/txouImagen"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/txou_normal"/>
<Button
    android:id="@+id/botonSalir"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:text="Menua"
    android:visibility="invisible"
    android:onClick="irAMenu"/>
    </LinearLayout>


</RelativeLayout>

