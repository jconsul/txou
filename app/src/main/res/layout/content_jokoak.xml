<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="es.tta.txou.vista.JokoakActivity"
    tools:showIn="@layout/activity_jokoak">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jokoak"
        android:gravity="center"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/letraTitulos"
        android:id="@+id/textView" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="@string/juegos"/>


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Esaerak"
            android:id="@+id/buttonEsaera"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:onClick="esaerak" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Asmakizunak"
            android:id="@+id/buttonAsmakizun"
            android:layout_gravity="center_horizontal"
            android:onClick="asmakizunak" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ahorkatua"
            android:id="@+id/buttonAhorkatu"
            android:layout_gravity="center_horizontal"
            android:onClick="ahorkatua"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Bideoa"
            android:id="@+id/buttonBideo"
            android:layout_gravity="center_horizontal"
            android:onClick="video"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Menua"
            android:layout_marginTop="150dp"
            android:onClick="irAMenu"/>

    </LinearLayout>


</RelativeLayout>
