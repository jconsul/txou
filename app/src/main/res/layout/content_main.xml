<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context="es.tta.txou.MainActivity">

    <LinearLayout
    android:id="@+id/inicio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:text="@string/izenburua"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textColor="@color/letraTitulos"/>

    <TextView
        android:id="@+id/agurra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/kargatzen"
        android:text="@string/kargatzen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/letraTitulos"/>
    <ProgressBar
        android:id="@+id/pbarProgreso"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:max="100" />

    <Button
        android:id="@+id/botonEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sartu"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:onClick="entrar"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jarraitu"
        android:id="@+id/button_jarraitu"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:onClick="irAMenu"/>

    <ImageView
        android:id="@+id/txou_normal"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:src="@drawable/txou_normal"/>

    </LinearLayout>
</RelativeLayout>
